{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "AIfred default permissions - safe operations without prompting",
  "version": "1.0",

  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git tag:*)",

      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker inspect:*)",
      "Bash(docker network ls:*)",
      "Bash(docker network inspect:*)",
      "Bash(docker volume ls:*)",
      "Bash(docker volume inspect:*)",
      "Bash(docker images:*)",
      "Bash(docker stats:*)",
      "Bash(docker info:*)",
      "Bash(docker version:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose logs:*)",
      "Bash(docker-compose config:*)",

      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Bash(hostname:*)",
      "Bash(uname:*)",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(free:*)",
      "Bash(uptime:*)",
      "Bash(date:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",

      "Bash(systemctl status:*)",
      "Bash(systemctl is-active:*)",
      "Bash(systemctl is-enabled:*)",
      "Bash(systemctl list-units:*)",

      "Bash(ping:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(nslookup:*)",
      "Bash(dig:*)",
      "Bash(host:*)",
      "Bash(ip:*)",
      "Bash(ss:*)",
      "Bash(netstat:*)",

      "Read",
      "Glob",
      "Grep",

      "mcp__mcp-gateway__read_graph",
      "mcp__mcp-gateway__search_nodes",
      "mcp__mcp-gateway__open_nodes",
      "mcp__mcp-gateway__fetch"
    ],

    "deny": [
      "Read(~/.ssh/**)",
      "Read(**/.env)",
      "Read(**/credentials*)",
      "Read(**/secrets*)",
      "Read(**/*password*)",
      "Read(**/*token*)",

      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf /home/*)",
      "Bash(sudo rm -rf:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "Bash(chmod -R 777 /*)",
      "Bash(chown -R:*)"
    ]
  }
}
